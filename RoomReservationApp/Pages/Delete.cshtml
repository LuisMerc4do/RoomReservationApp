@page "{id:int}"
@model RoomReservationApp.Pages.DeleteModel
@{
    ViewData["Title"] = "Delete Reservation";
}

<h2>Delete Reservation</h2>

<h3>Are you sure you want to delete this reservation?</h3>
<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Room Number
        </dt>
        <dd class="col-sm-10">
            @Model.RoomReservation.RoomNumber
        </dd>
        <dt class="col-sm-2">
            Reserved By
        </dt>
        <dd class="col-sm-10">
            @Model.RoomReservation.ReservedBy
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Model.RoomReservation.StartTime.ToString("yyyy-MM-dd HH:mm")
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Model.RoomReservation.EndTime.ToString("yyyy-MM-dd HH:mm")
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.RoomReservation.Description
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="RoomReservation.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
